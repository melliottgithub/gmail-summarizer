# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=config/credentials.json
GMAIL_TOKEN_PATH=config/token.json

# AI Service Configuration (choose one or multiple)
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Email Processing Configuration
DEFAULT_DAYS_BACK=7
MAX_EMAILS_PER_BATCH=100
RELEVANCE_THRESHOLD=0.7

# Storage Configuration
DATABASE_PATH=data/emails.db
BACKUP_ENABLED=true
BACKUP_FREQUENCY_DAYS=7

# Filtering Configuration
EXCLUDE_SENDERS=noreply@,no-reply@,notifications@
EXCLUDE_SUBJECTS=unsubscribe,newsletter,promotional
INCLUDE_ONLY_LABELS=INBOX,IMPORTANT

# Summarization Configuration
SUMMARY_MAX_LENGTH=200
SUMMARY_STYLE=bullet_points  # options: paragraph, bullet_points, keywords
INCLUDE_METADATA=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/gmail_summarizer.log
